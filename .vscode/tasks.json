{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++ with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-o",
                "output",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build C++ file using g++ with C++17"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-15 build active file",
            "command": "/opt/homebrew/bin/g++-15",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}